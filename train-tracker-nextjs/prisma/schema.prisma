generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TrainReport {
  id             Int       @id @default(autoincrement())
  isTrainCrossing Boolean
  reportedAt     DateTime  @default(now())
  expiresAt      DateTime? // Only set for train crossing reports (null for clear reports)
  userIpAddress  String
  userAgent      String
  sessionId      String

  @@map("TrainReports")
  @@index([expiresAt])
  @@index([reportedAt])
}
