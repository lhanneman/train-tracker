generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TrainReport {
  id             Int      @id @default(autoincrement())
  isTrainCrossing Boolean
  reportedAt     DateTime @default(now())
  userIpAddress  String
  userAgent      String
  sessionId      String

  @@map("TrainReports")
}
